root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true

[**.bat]
end_of_line = crlf
indent_style = tab

[**.json]
indent_style = tab

[**.{md,markdown,mdown}]
trim_trailing_whitespace = false

[**.php]

[**.rb]

[**.sublime-settings]
indent_style = tab

[**.txt]
insert_final_newline = false
trim_trailing_whitespace = false
